<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="640dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Report ID"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Customer Name"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Date"
                android:gravity="center"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Warranty"
                android:gravity="center"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:text="Service Nature"
                android:gravity="center"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Labour ($)"
                android:gravity="center"
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Material ($)"
                android:gravity="center"
                android:id="@+id/textView11"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/textView12"
                android:text="Transport ($)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Total ($)"
                android:gravity="center"
                android:id="@+id/textView13"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Comments"
                android:gravity="center"
                android:id="@+id/textView14"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Engineer Name"
                android:gravity="center"
                android:id="@+id/textView15"
                android:layout_marginTop="1px"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/tvEditRepId"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvEditRepDate" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rgEditRepWarranty"
        android:layout_column="0"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/tvEditRepId"
        android:layout_alignStart="@+id/tvEditRepDate">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/rbEditRepYes"
            android:checked="false"
            android:layout_below="@+id/etEditRepDate"
            android:layout_alignStart="@+id/etEditRepDate"
            android:layout_marginTop="22dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/rbEditRepNo"
            android:layout_alignBottom="@+id/rgEditRepWarranty"
            android:layout_toEndOf="@+id/tvEditRepId"
            android:layout_marginStart="50dp"
            android:layout_marginTop="22dp"/>


    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rgEditRepService"
        android:layout_below="@+id/rgEditRepWarranty"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/tableLayout"
        android:layout_alignStart="@+id/rgEditRepWarranty">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installation"
            android:id="@+id/rbEditRepInstallation"
            android:layout_alignTop="@+id/rgEditRepService"
            android:layout_alignStart="@+id/rgEditRepWarranty" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbEditRepRepair"
            android:text="Repair"
            android:layout_below="@+id/rbEditRepInstallation"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance"
            android:id="@+id/rbEditRepMaintenance"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminate"
            android:id="@+id/rbEditRepTerminate"
            android:layout_below="@+id/rgEditRepService"
            android:layout_alignEnd="@+id/tvEditRepId"
            android:checked="false" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEditRepLabour"
        android:ems="10"
        android:layout_below="@+id/rgEditRepService"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEditRepMaterial"
        android:ems="10"
        android:layout_below="@+id/etEditRepLabour"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEditRepTransport"
        android:ems="10"
        android:layout_below="@+id/etEditRepMaterial"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEditRepComments"
        android:ems="10"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/tvEditRepEngName"
        android:gravity="center"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignStart="@+id/etEditRepComments" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnEditRepBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onEditRepBack"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnEditRepSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onEditRepSave"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="New Text"
        android:id="@+id/tvEditRepDate"
        android:gravity="center"
        android:layout_alignBottom="@+id/rgEditRepWarranty"
        android:layout_alignStart="@+id/etEditRepLabour"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/tvEditRapTotal"
        android:layout_above="@+id/etEditRepComments"
        android:layout_alignStart="@+id/etEditRepComments"
        android:gravity="center" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actEditRepCustName"
        android:layout_above="@+id/tvEditRepDate"
        android:layout_alignStart="@+id/tvEditRepDate" />

</RelativeLayout>
</ScrollView>
