<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="640dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Customer Name"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Date"
                    android:gravity="center"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Warranty"
                    android:gravity="center"
                    android:id="@+id/textView7"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:text="Service Nature"
                    android:gravity="center"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Labour ($)"
                    android:gravity="center"
                    android:id="@+id/textView10"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Material ($)"
                    android:gravity="center"
                    android:id="@+id/textView11"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:id="@+id/textView12"
                    android:text="Transport ($)"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Total ($)"
                    android:gravity="center"
                    android:id="@+id/textView13"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Comments"
                    android:gravity="center"
                    android:id="@+id/textView14"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Engineer Name"
                    android:gravity="center"
                    android:id="@+id/textView15"
                    android:layout_marginTop="1px"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepDate"
            android:ems="10"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:inputType="date"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgAddRepWarranty"
            android:layout_column="0"
            android:layout_below="@+id/etAddRepDate"
            android:layout_alignStart="@+id/etAddRepDate">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/rbAddRepYes"
                android:checked="false"
                android:layout_below="@+id/etAddRepDate"
                android:layout_alignStart="@+id/etAddRepDate"
                android:layout_marginTop="22dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/rbAddRepNo"
                android:layout_alignBottom="@+id/rgAddRepWarranty"
                android:layout_toEndOf="@+id/tvEditRepId"
                android:layout_marginStart="50dp"
                android:layout_marginTop="22dp"/>


        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rgAddRepService"
            android:layout_below="@+id/rgAddRepWarranty"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/tableLayout"
            android:layout_alignStart="@+id/rgAddRepWarranty">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Installation"
                android:id="@+id/rbAddRepInstallation"
                android:layout_alignTop="@+id/rgAddRepService"
                android:layout_alignStart="@+id/rgAddRepWarranty" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbAddRepRepair"
                android:text="Repair"
                android:layout_below="@+id/rbAddRepInstallation"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintenance"
                android:id="@+id/rbAddRepMaintenance"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminate"
                android:id="@+id/rbAddRepTerminate"
                android:layout_below="@+id/rgAddRepService"
                android:layout_alignEnd="@+id/tvEditRepId"
                android:checked="false" />
        </RadioGroup>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepLabour"
            android:ems="10"
            android:layout_below="@+id/rgAddRepService"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepMaterial"
            android:ems="10"
            android:layout_below="@+id/etAddRepLabour"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepTransport"
            android:ems="10"
            android:layout_below="@+id/etAddRepMaterial"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepTotal"
            android:ems="10"
            android:layout_below="@+id/etAddRepTransport"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepComments"
            android:ems="10"
            android:layout_below="@+id/etAddRepTotal"
            android:layout_alignStart="@+id/etAddRepTotal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="New Text"
            android:id="@+id/tvAddRepEngName"
            android:gravity="center"
            android:layout_below="@+id/etAddRepComments"
            android:layout_alignStart="@+id/etAddRepTotal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnAddRepBack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="onAddRepBack"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnAddRepSave"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="onAddRepSave"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etAddRepCustName"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/etAddRepDate"
            android:ems="10"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>
