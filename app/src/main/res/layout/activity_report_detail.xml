<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Report ID:"
                android:id="@+id/textView"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Customer Name"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Date"
                android:gravity="center"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Warranty"
                android:gravity="center"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Service Nature"
                android:gravity="center"
                android:id="@+id/textView9"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Labour ($)"
                android:gravity="center"
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Material ($)"
                android:gravity="center"
                android:id="@+id/textView11"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/textView12"
                android:text="Transport ($)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Total ($)"
                android:gravity="center"
                android:id="@+id/textView13"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Comments"
                android:gravity="center"
                android:id="@+id/textView14"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Engineer Name"
                android:gravity="center"
                android:id="@+id/textView15"
                android:layout_marginTop="1px"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="1"
        android:id="@+id/tvRepId"
        android:layout_column="10"
        android:layout_marginRight="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvRepCustName"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepCustName"
        android:layout_column="10"
        android:layout_marginRight="97dp"
        android:layout_marginEnd="95dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_below="@+id/tvRepId"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepDate"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepCustName"
        android:layout_alignStart="@+id/tvRepCustName"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepWarranty"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepDate"
        android:layout_alignStart="@+id/tvRepDate"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepService"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepWarranty"
        android:layout_alignStart="@+id/tvRepWarranty"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepLabour"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepService"
        android:layout_alignStart="@+id/tvRepService"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepMaterial"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepLabour"
        android:layout_alignStart="@+id/tvRepLabour"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepTransport"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepMaterial"
        android:layout_alignStart="@+id/tvRepMaterial"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepTotal"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepTransport"
        android:layout_alignStart="@+id/tvRepTransport"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepComments"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_below="@+id/tvRepTotal"
        android:layout_alignStart="@+id/tvRepTotal"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvRepEngName"
        android:layout_column="10"
        android:layout_marginRight="67dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignStart="@+id/tvRepComments"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Report"
        android:id="@+id/btnRepEdit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvRepEngName"
        android:layout_marginBottom="40dp"
        android:onClick="onEditRepClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnRepBack"
        android:layout_alignBottom="@+id/btnRepEdit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:onClick="backViewReport"
        android:textColor="#ff0000" />

</RelativeLayout>
